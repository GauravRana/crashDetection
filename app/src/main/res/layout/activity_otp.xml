<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="false"
    android:gravity="center_horizontal"
    tools:context=".ui.login.SplashScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/otp_screen_height">

        <TextView
            android:id="@+id/tvVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:text="@string/text_verify"/>


        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:shadowColor="@color/white"
            android:textColor="@color/black"
            android:itemBackground="@drawable/back_otp_editext"
            android:textSize="@dimen/_20sdp"
            app:hideLineWhenFilled="false"
            app:itemCount="4"
            app:itemSpacing="16dp"
            app:lineColor="@android:color/transparent"
            app:state_filled="true"
            app:viewType="rectangle" />



        <Button
            android:id="@+id/btn_verify"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_black_button"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/text_v_button"/>



    </LinearLayout>




</LinearLayout>